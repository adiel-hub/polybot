# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Master encryption key for wallet private keys
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=your_encryption_key_here

# Polygon RPC URL (Alchemy, Infura, or public RPC)
POLYGON_RPC_URL=https://polygon-rpc.com

# Alchemy API Key (for real-time deposit detection via WebSocket)
# Get a free API key at https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Database path
DATABASE_PATH=./data/polybot.db

# Gas sponsor wallet private key (for withdrawal gas fees)
# This wallet needs POL for gas
GAS_SPONSOR_PRIVATE_KEY=your_sponsor_private_key_here

# Admin Telegram user IDs (comma-separated list of Telegram user IDs who can access /admin)
# Get your Telegram user ID by messaging @userinfobot
ADMIN_TELEGRAM_IDS=123456789,987654321

# Polymarket Builder Program (for earning from trading volume)
# Get builder credentials at https://polymarket.com/settings?tab=builder
# Click "+ Create New" to generate API keys
POLY_BUILDER_API_KEY=your_builder_api_key_here
POLY_BUILDER_SECRET=your_builder_secret_here
POLY_BUILDER_PASSPHRASE=your_builder_passphrase_here
