# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Master encryption key for wallet private keys
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=your_encryption_key_here

# Polygon RPC URL (Alchemy, Infura, or public RPC)
POLYGON_RPC_URL=https://polygon-rpc.com

# Alchemy API Key (for real-time deposit detection via WebSocket)
# Get a free API key at https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Database path
DATABASE_PATH=./data/polybot.db

# Gas sponsor wallet private key (for withdrawal gas fees)
# This wallet needs POL for gas
GAS_SPONSOR_PRIVATE_KEY=your_sponsor_private_key_here

# Admin Telegram user IDs (comma-separated list of Telegram user IDs who can access /admin)
# Get your Telegram user ID by messaging @userinfobot
ADMIN_TELEGRAM_IDS=123456789,987654321

# Polymarket Builder Program (for earning from trading volume)
# Get builder credentials at https://polymarket.com/settings?tab=builder
# Click "+ Create New" to generate API keys
POLY_BUILDER_API_KEY=your_builder_api_key_here
POLY_BUILDER_SECRET=your_builder_secret_here
POLY_BUILDER_PASSPHRASE=your_builder_passphrase_here

# ============================================
# NEWS BOT SETTINGS (for news_bot module)
# ============================================

# Telegram channel for news posts
# Use @channel_username or numeric channel ID (e.g., -1001234567890)
NEWS_CHANNEL_ID=@your_channel_username

# News bot token (optional - uses TELEGRAM_BOT_TOKEN if not set)
# Use a separate bot for news if you want different bot identity
NEWS_BOT_TOKEN=

# Trading bot username for "Trade Now" button deep links
# This is the username of your main polybot (without @)
# When clicked, opens the trading bot with the market pre-loaded
TRADING_BOT_USERNAME=YourTradingBot

# Claude API key for article generation
# Get your API key at https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use (optional, defaults to claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Tavily API key for web research (optional but recommended)
# Get a free API key at https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Polling interval in minutes (default: 15)
POLL_INTERVAL_MINUTES=15

# Maximum markets to process per poll (default: 5)
MAX_MARKETS_PER_POLL=5

# Minimum volume/liquidity thresholds for market selection
MIN_MARKET_VOLUME=1000
MIN_MARKET_LIQUIDITY=500
