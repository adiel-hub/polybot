# Test Environment Configuration for PolyBot
# ==========================================
# Copy this file to test.env and fill in your values
# NEVER commit test.env to git!

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Master encryption key for wallet private keys
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=your_encryption_key_here

# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-rpc.com

# Database path
DATABASE_PATH=./data/polybot.db

# Alchemy API Key (for WebSocket deposit monitoring)
ALCHEMY_API_KEY=your_alchemy_key_here

# Gas sponsor wallet private key (for withdrawal gas fees)
# Generate with: python setup_gas_sponsor.py
# NEVER share this key or commit it to git!
GAS_SPONSOR_PRIVATE_KEY=your_sponsor_private_key_here

# Admin Telegram IDs (comma-separated)
ADMIN_TELEGRAM_IDS=your_telegram_id_here

# Polymarket Builder Program (OPTIONAL)
POLY_BUILDER_API_KEY=
POLY_BUILDER_SECRET=
POLY_BUILDER_PASSPHRASE=

# Integration Test Configuration
TEST_DEPOSIT_AMOUNT=10.0
TEST_TRADE_AMOUNT=2.0
TEST_WITHDRAWAL_AMOUNT=3.0
